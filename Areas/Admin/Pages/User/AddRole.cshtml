@page "/admin/user-addrole"
@model AddRoleModel
@{
    ViewData["Title"] = "Thiết lập vai trò role";


}


<h4> @ViewData["Title"]</h4>

<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label class="form-label" asp-for="RoleNames"></label>
                <select  placeholder="Chọn trạng thái" data-width="100%" class="selectpicker" multiple="multiple" id="selectrole" asp-for="RoleNames"
                        asp-items="@(Model.select)">
                    
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Thêm role</button>
            <a class="btn btn-primary" asp-page="./index">Danh sách các Users</a>
        </form>
    </div>
    <div class="col-md-6"></div>
</div>

@section Scripts{
    <link href="~/lib/multiple-select/multiple-select.min.css" rel="stylesheet" />
    <script src="~/lib/multiple-select/multiple-select.min.js"></script>

    <script>
        $('#selectrole').multipleSelect({
            selectAll: false,
            keepOpen: false,
            isOpen: false,
        });

        //$('.selectpicker').select({
        //    placeholder: "Chọn trạng thái"
        
        //});


    </script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
